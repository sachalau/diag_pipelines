rule copy_fastq_paired_from_link:
    input:
        R1="reads/ENA/{sample}_1.fastq.gz",
        R2="reads/ENA/{sample}_2.fastq.gz",
    output:
        temp("samples/{sample}/reads/raw/{sample}_R1.fastq.gz"),
        temp("samples/{sample}/reads/raw/{sample}_R2.fastq.gz")
    shell:
        """
        cp {input[0]} {output[0]}
        cp {input[1]} {output[1]}
        """
        
