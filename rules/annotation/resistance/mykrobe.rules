rule generate_mykrobe_tsv_file_from_json_file:
    input:
        "samples/{sample}/resistance/mykrobe.json",
    output:
        "samples/{sample}/resistance/mykrobe.tsv"
    script:
        "scripts/mykrobe_json_to_tsv.py"

   
